Bootstrap: docker
From: ubuntu
%files
    Mango /usr/bin
%post
    apt-get -y update
    apt-get install -y git
    apt-get install -y libglu1-mesa-dev
    apt-get install -y libgtk2.0-0
    git clone -b docker_implementation https://github.com/TeamMango/cavatica.git
    chmod -R go+rw /cavatica/data/test 
    DEBIAN_FRONTEND=noninteractive apt-get install -y r-base 
    echo "install.packages(\"ggplot2\", repos=\"https://cran.rstudio.com\")" | R --no-save
    echo "install.packages(\"readr\", repos=\"https://cran.rstudio.com\")" | R --no-save
%runscript    
    cd /cavatica/data/output
    ln ../test/*.tsv .
    exec ../../code/script.sh
